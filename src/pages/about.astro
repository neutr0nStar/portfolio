      <ul
        class="grid gap-2 grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5"
      >
        {
          Skills.sort(compareFn).map((Skill) => (
            <li class={`bg-white p-2 text-lg rounded-md ${Skill.colorClass}`}>
